<%# With rails form_for helper%>
<div class= "container-fluid row">
  <div class="container col-md-3"></div>
  <div class="container col-md-6">
    <%= form_for @user do |f| %>
      <div class="mt-4 mb-4">
        <%= f.label :username, 'User Name:'%><br>
        <%= f.text_field :username, placeholder: 'Enter your name her!' %>
      </div>
      <div class="mt-4 mb-4">
        <%= f.label :email, 'E-mail'%><br>
        <%= f.email_field :email, placeholder: 'Ex: foo@bar.com'%>
      </div>
      <div class="mt-4 mb-4">
        <%= f.label :password, 'Password' %><br>
        <%= f.password_field :password %>
      </div>
      <%= f.submit 'Save user', class: 'btn btn-info btn-block'%>
    <% end %>
  </div>
  <div class="container col-md-3"></div>
</div>

