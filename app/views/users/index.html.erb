<h1 class="text-center text-info">All users</h1>

<div class="container-fluid row mb-5 p-3 bg-light">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <% if flash[:warning] %>
      <div class="card bg-light mb-5 bt-4">
        <div class="card-body text-success text-center">
          <%= warning %>
        </div>
      </div>
    <% end %>
    <% @users.each do |u| %>
        <div class="card mt-2 mb-2">
          <%= link_to edit_user_path(u), class: 'text-decoration-none' do %>
            <div class="card-body">
              Name : <%= u.username %>, Email: <%= u.email %>
            </div>
          <% end %>
          <div class= "card-footer">
            <%= link_to 'Delete User', user_path(u), method: :delete, class: 'text-danger', data: { confirm: "Do you realy want to delete this user?" } %>
          </div>
        </div>
    <% end %>
    <%= link_to 'Add new user >> ', new_user_path, class: 'btn btn-warning btn-block' %>
  </div>
  <div class="col-md-3"></div>
</div>